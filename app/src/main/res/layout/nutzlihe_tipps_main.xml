<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginRight="@dimen/mainFrame_margin"
    android:layout_marginLeft="@dimen/mainFrame_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reisekasse"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center|left"
        android:textSize="@dimen/heading_h1"
        android:lineSpacingExtra="@dimen/letter_spacing"
        android:layout_marginTop="@dimen/square_margin"
        android:layout_marginBottom="@dimen/square_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stellen_sie_sicher"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/body_text"
        android:gravity="center|left"
        android:lineSpacingExtra="@dimen/letter_spacing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:layout_marginBottom="@dimen/square_margin"
        android:layout_marginTop="@dimen/padd_w_lt_sp_top">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/langzeitaufenthalte"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center|left"
        android:textIsSelectable="false"
        android:textSize="@dimen/heading_h1"
        android:lineSpacingExtra="@dimen/letter_spacing"
        android:layout_marginBottom="@dimen/padd_w_lt_sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/denken_sie_b"
        android:textColor="@color/text_color_black"
        android:gravity="center|left"
        android:textSize="@dimen/body_text"
        android:lineSpacingExtra="@dimen/letter_spacing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/padd_w_lt_sp_top"
        android:layout_marginBottom="@dimen/square_margin">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verlust_d"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center|left"
        android:textSize="@dimen/heading_h1"
        android:lineSpacingExtra="@dimen/letter_spacing"
        android:layout_marginBottom="@dimen/padd_w_lt_sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/informieren_s"
