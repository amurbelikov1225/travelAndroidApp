        android:gravity="center|left"
        android:textSize="@dimen/body_text"
        android:lineSpacingExtra="@dimen/letter_spacing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/padd_w_lt_sp_top"
        android:layout_margin="5dp"
        android:layout_marginBottom="@dimen/square_margin"
        android:visibility="gone">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="@dimen/padd_w_lt_sp"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/reisen_mit_kindern"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center|left"
            android:textSize="@dimen/heading_h1"
            android:lineSpacingExtra="@dimen/letter_spacing" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:id="@+id/fa_hand_o_right_top"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/fa_arrow_circle_o_right"
            android:textSize="25sp"
            android:clickable="true"
            android:gravity="center|right"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/padd_w_lt_sp_top"
        android:layout_marginBottom="@dimen/square_margin">
    </LinearLayout>


    <TextView
